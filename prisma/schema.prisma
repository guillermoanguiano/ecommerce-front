
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @unique @default(uuid()) @id
  firstName String 
  lastName String
  email    String  @unique
  password String
  admin Boolean @default(false)
}

model Product {
  id          String @id @default(uuid())
  name        String
  description String
  image       String
  price       Int
  reviews     Review[]
}

model Review {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id])
  rating    Int
  text      String
  productId String
  userId    String
}